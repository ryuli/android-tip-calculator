<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="btnActivate">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/black_bg</item>
    </style>

    <style name="btnDeactivate">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/black_border</item>
    </style>

    <style name="labelStr">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/gray_bg</item>
    </style>

    <style name="blockCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="blockA" parent="blockCommon">
        <item name="android:background">@drawable/gray_border</item>
    </style>
    
    <style name="blockB" parent="blockCommon">
        <item name="android:background">@drawable/yellow_bg</item>
    </style>

</resources>